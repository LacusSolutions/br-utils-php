{
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting"
      },
      {
        "action": "composer lint:fix"
      }
    ]
  },
  "commit-msg": {
    "enabled": true,
    "actions": [
      {
        "action": "\\Ramsey\\CaptainHook\\ValidateConventionalCommit"
      }
    ]
  },
  "pre-push": {
    "enabled": true,
    "actions": [
      {
        "action": "composer lint"
      }
    ]
  }
}
