{
  "name": "lacus/monorepo",
  "type": "project",
  "description": "Monorepo for Lacus BR Utils for PHP",
  "license": "MIT",
  "extra": {
    "monorepo": true
  },
  "authors": [
    {
      "name": "Julio L. Muller",
      "email": "juliolmuller@outlook.com",
      "homepage": "https://juliolmuller.github.io"
    }
  ],
  "scripts": {
    "prepare": "captainhook",
    "commit": "conventional-commits prepare",
    "lint": [
      "phpstan analyse",
      "php-cs-fixer fix --dry-run --diff"
    ],
    "lint:fix": "php-cs-fixer fix",
    "infection": "infection --min-msi=80 --min-covered-msi=80",
    "test:sync-configs": "php scripts/phpunit-sync-configs.php",
    "test:cnpj-fmt": "cd packages/cnpj-fmt && composer test",
    "test:cnpj-gen": "cd packages/cnpj-gen && composer test",
    "test:cnpj-val": "cd packages/cnpj-val && composer test",
    "test:cnpj-utils": "cd packages/cnpj-utils && composer test",
    "test:cpf-fmt": "cd packages/cpf-fmt && composer test",
    "test:cpf-gen": "cd packages/cpf-gen && composer test",
    "test:cpf-val": "cd packages/cpf-val && composer test",
    "test:cpf-utils": "cd packages/cpf-utils && composer test",
    "test:br-utils": "cd packages/br-utils && composer test",
    "test:formatters": [
      "@test:cnpj-fmt",
      "@test:cpf-fmt"
    ],
    "test:generators": [
      "@test:cpf-gen",
      "@test:cnpj-gen"
    ],
    "test:validators": [
      "@test:cpf-val",
      "@test:cnpj-val"
    ],
    "test:utils": [
      "@test:cnpj-utils",
      "@test:cpf-utils",
      "@test:br-utils"
    ],
    "test:cnpj": [
      "@test:cnpj-fmt",
      "@test:cnpj-gen",
      "@test:cnpj-val",
      "@test:cnpj-utils"
    ],
    "test:cpf": [
      "@test:cpf-val",
      "@test:cpf-gen",
      "@test:cpf-fmt",
      "@test:cpf-utils"
    ],
    "test:all": [
      "@test:formatters",
      "@test:generators",
      "@test:validators",
      "@test:utils"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "captainhook/hook-installer": true,
      "infection/extension-installer": true
    }
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "captainhook/captainhook": "^5.25",
    "captainhook/hook-installer": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.87",
    "infection/infection": "~0.28.1",
    "phpstan/phpstan": "^2.1",
    "ramsey/conventional-commits": "^1.6",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Lacus\\BrUtils\\": "packages/br-utils/src/",
      "Lacus\\CnpjFnt\\": "packages/cnpj-fmt/src/",
      "Lacus\\CnpjGen\\": "packages/cnpj-gen/src/",
      "Lacus\\CnpjVal\\": "packages/cnpj-val/src/",
      "Lacus\\CnpjUtils\\": "packages/cnpj-utils/src/",
      "Lacus\\CpfFnt\\": "packages/cpf-fmt/src/",
      "Lacus\\CpfGen\\": "packages/cpf-gen/src/",
      "Lacus\\CpfVal\\": "packages/cpf-val/src/",
      "Lacus\\CpfUtils\\": "packages/cpf-utils/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lacus\\BrUtils\\Tests\\": "packages/br-utils/tests/",
      "Lacus\\CnpjFnt\\Tests\\": "packages/cnpj-fmt/src/",
      "Lacus\\CnpjGen\\Tests\\": "packages/cnpj-gen/tests/",
      "Lacus\\CnpjVal\\Tests\\": "packages/cnpj-val/tests/",
      "Lacus\\CnpjUtils\\Tests\\": "packages/cnpj-utils/tests/",
      "Lacus\\CpfFnt\\Tests\\": "packages/cpf-fmt/tests/",
      "Lacus\\CpfGen\\Tests\\": "packages/cpf-gen/tests/",
      "Lacus\\CpfVal\\Tests\\": "packages/cpf-val/tests/",
      "Lacus\\CpfUtils\\Tests\\": "packages/cpf-utils/tests/"
    }
  }
}
