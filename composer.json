{
  "name": "lacus/monorepo",
  "type": "project",
  "extra": {
    "monorepo": true
  },
  "authors": [
    {
      "name": "Julio L. Muller",
      "email": "juliolmuller@outlook.com",
      "homepage": "https://juliolmuller.github.io"
    }
  ],
  "scripts": {
    "prepare": "captainhook",
    "commit": "conventional-commits prepare",
    "analyze": "phpstan analyse",
    "check": "php-cs-fixer fix --dry-run --diff",
    "fix": "php-cs-fixer fix",
    "infection": "infection --min-msi=80 --min-covered-msi=80",
    "test": "phpunit",
    "test:watch": "phpunit-watcher watch",
    "test-coverage": "phpunit --coverage-html coverage",
    "test:br-utils": "phpunit --testsuite='BR Utils'",
    "test:cnpj-fmt": "phpunit --testsuite='CNPJ Formatter'",
    "test:cnpj-gen": "phpunit --testsuite='CNPJ Generator'",
    "test:cnpj-utils": "phpunit --testsuite='CNPJ Utils'",
    "test:cnpj-val": "phpunit --testsuite='CNPJ Validator'",
    "test:cpf-fmt": "phpunit --testsuite='CPF Formatter'",
    "test:cpf-gen": "phpunit --testsuite='CPF Generator'",
    "test:cpf-utils": "phpunit --testsuite='CPF Utils'",
    "test:formatters": "phpunit --testsuite='CPF Formatter' --testsuite='CNPJ Formatter'",
    "test:generators": "phpunit --testsuite='CPF Generator' --testsuite='CNPJ Generator'",
    "test:validators": "phpunit --testsuite='CPF Validator' --testsuite='CNPJ Validator'",
    "test:cnpj": "phpunit --testsuite='CNPJ Validator' --testsuite='CNPJ Generator' --testsuite='CNPJ Formatter' --testsuite='CNPJ Utils'",
    "test:cpf": "phpunit --testsuite='CPF Validator' --testsuite='CPF Generator' --testsuite='CPF Formatter' --testsuite='CPF Utils'",
    "test:utils": "phpunit --testsuite='CPF Utils' --testsuite='CNPJ Utils' --testsuite='BR Utils'",
    "test:cpf-val": "phpunit --testsuite='CPF Validator'",
    "test:all": "phpunit --testsuite='All Tests'"
  },
  "require": {
    "php": ">=7.3"
  },
  "require-dev": {
    "captainhook/captainhook": "^5.25",
    "captainhook/hook-installer": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.0",
    "infection/infection": "^0.26",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0",
    "ramsey/conventional-commits": "^1.6",
    "roave/security-advisories": "dev-latest",
    "spatie/phpunit-watcher": "^1.24"
  },
  "autoload": {
    "psr-4": {
      "Lacus\\BrUtils\\": "packages/br-utils/src/",
      "Lacus\\Cnpj\\": "packages/cnpj-utils/src/",
      "Lacus\\Cpf\\": "packages/cpf-utils/src/",
      "Lacus\\Formatters\\Cnpj\\": "packages/cnpj-fmt/src/",
      "Lacus\\Formatters\\Cpf\\": "packages/cpf-fmt/src/",
      "Lacus\\Generators\\Cnpj\\": "packages/cnpj-gen/src/",
      "Lacus\\Generators\\Cpf\\": "packages/cpf-gen/src/",
      "Lacus\\Validators\\Cnpj\\": "packages/cnpj-val/src/",
      "Lacus\\Validators\\Cpf\\": "packages/cpf-val/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lacus\\BrUtils\\Tests\\": "packages/br-utils/tests/",
      "Lacus\\Formatters\\Cnpj\\Tests\\": "packages/cnpj-fmt/tests/",
      "Lacus\\Generators\\Cnpj\\Tests\\": "packages/cnpj-gen/tests/",
      "Lacus\\Cnpj\\Tests\\": "packages/cnpj-utils/tests/",
      "Lacus\\Validators\\Cnpj\\Tests\\": "packages/cnpj-val/tests/",
      "Lacus\\Formatters\\Cpf\\Tests\\": "packages/cpf-fmt/tests/",
      "Lacus\\Generators\\Cpf\\Tests\\": "packages/cpf-gen/tests/",
      "Lacus\\Cpf\\Tests\\": "packages/cpf-utils/tests/",
      "Lacus\\Validators\\Cpf\\Tests\\": "packages/cpf-val/tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "captainhook/hook-installer": true,
      "infection/extension-installer": true
    },
    "sort-packages": true
  }
}
